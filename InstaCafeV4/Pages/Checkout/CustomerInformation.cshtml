@page
@model InstaCafeV4.Pages.Checkout.CustomerInformationModel
@{
}

<section class="home-slider owl-carousel">

    <div class="slider-item" style="background-image: url(~/wwwroot/Images/bg_3.jpg);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Checkout</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a asp-page="Index">Home</a></span> <span>Checout</span></p>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 ftco-animate">
                <form id="forminfo" class="billing-form ftco-bg-dark p-3 p-md-5" method="post">
                    <h3 class="mb-4 billing-heading">Billing Details</h3>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstname">First Name</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.FirstName"></span>
                                <input type="text" class="form-control" placeholder="" asp-for="CustomerInformation.FirstName">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastname">Last Name</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.LastName"></span>
                                <input type="text" class="form-control" placeholder="" asp-for="CustomerInformation.LastName">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="streetaddress">Street Address</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.Address2"></span>
                                <input type="text" class="form-control" placeholder="House number and street name" asp-for="CustomerInformation.Address1">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <span class="help is-danger" asp-validation-for="CustomerInformation.Address2"></span>
                                <input type="text" class="form-control" placeholder=" (optional)" asp-for="CustomerInformation.Address2">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="towncity">Town / City</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.City"></span>
                                <input type="text" class="form-control" placeholder="" asp-for="CustomerInformation.City">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="postcodezip">Postcode / ZIP *</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.PostCode"></span>
                                <input type="text" class="form-control" placeholder="" asp-for="CustomerInformation.PostCode">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.PhoneNumber"></span>
                                <input type="text" class="form-control" placeholder="" asp-for="CustomerInformation.PhoneNumber">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="emailaddress">Email Address</label>
                                <span class="help is-danger" asp-validation-for="CustomerInformation.Email"></span>
                                <input type="text" class="form-control" placeholder="" asp-for="CustomerInformation.Email">
                            </div>
                        </div>

                        <p><a class="btn btn-primary py-3 px-4" onclick="document.getElementById('forminfo').submit();">Place an order</a></p>
                        <div class="w-100"></div>
                    </div>
                </form>


                </div>
            </div>
        </div>
    </section>
                
                            


                  
